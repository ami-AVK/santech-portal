---
import Appbar from "../components/Appbar.astro";

import Layout from "../layouts/Layout.astro";
import Hero from "../components/main_sections/Section_Hero.astro";
import LinkSection from "../components/main_sections/Section_Links.astro";
import Calendar from "../components/main_sections/Section_Calendar.astro";
import Vote from "../components/main_sections/Section_Vote.astro";
import NewStaff from "../components/main_sections/Section_NewStaff.astro";
import News from "../components/main_sections/Section_News.astro";
import Birthday from "../components/main_sections/Section_Birthday.astro";
import Jobs from "../components/main_sections/Section_Jobs.astro";
import Story from "../components/main_sections/Section_Story.astro";
---

<Layout title="Портал компании «Сантехкомплект»">
  <Appbar />
  <Hero />
  <div class="flex flex-col justify-around mx-auto">
    <section class="px-8 pt-16 pb-16 md:px-16 md:pb-32">
      <LinkSection />
    </section>
    <Calendar />
    <Vote />
    <NewStaff />
    <News />
    <Birthday />
    <Jobs />
  </div>
  <Story />
</Layout>
