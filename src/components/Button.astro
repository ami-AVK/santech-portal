---
const {url, title, icon, subtitle, type, valueToKeep,id, class:className} = Astro.props;
const Tag = url?"a":"button"; // если есть ссылка то это a
---

  <Tag href={url} value-to-keep={valueToKeep} id={id} class:list={["flex flex-row place-items-center gap-4 px-3 py-2 rounded-3xl max-w-fit py-1 text-base font-400 ",className]}>
    {icon?<svg class="w-6 h-6 md:w-8 md:h-8 "><use xlink:href={"#"+icon}></use></svg>:false}
    {title && <span class="">{title}</span>}
  </Tag>
