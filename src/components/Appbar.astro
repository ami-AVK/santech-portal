---
const pathname = new URL(Astro.request.url).pathname;
const main = pathname[0];
---
<header class="p-4 bg-main-900 text-gray-100 sticky top-0 z-10">
	<div class="container flex justify-between h-12 mx-auto">
        <a rel="noopener noreferrer" href={main} aria-label="Back to homepage" class="flex items-center p-2">
			<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 29.3 14.3" class="w-12 h-12 text-white">
				<g>
					<path class="st0" d="M5.6,6.5C5.6,7,5.7,7.5,6,7.9c0.7,0.9,1.9,1,2.7,0.4L19.8,0l-6.5,0L6.4,5.2C6,5.5,5.7,6,5.6,6.5z"/>
					<polygon class="st0" points="20.1,9 24.1,14.1 29,14.1 23.4,6.6 	"/>
					<polygon class="st0" points="15.5,12.5 16.7,14.1 21.8,14.1 18.7,10.1 	"/>
					<path class="st0" d="M9.8,9.7c-0.7,0.5-1.5,0.8-2.3,0.8c-1.1,0-2.2-0.6-2.9-1.5C4,8.1,3.7,7.2,3.9,6.2c0.2-1,0.7-1.9,1.5-2.5l5-3.7
						L3.9,0L3,0.7c-3.3,2.5-4,7.2-1.6,10.6c2.5,3.3,7.2,4,10.6,1.6L29.3,0l-6.5,0L9.8,9.7z"/>
				</g>
			</svg>
		</a>
		<ul class="items-stretch hidden space-x-3 lg:flex">
			<li class="flex">
				<a rel="noopener noreferrer" href="#" class="flex items-center px-4 -mb-1 border-b-2 border-transparent">JDE</a>
			</li>
			<li class="flex">
				<a rel="noopener noreferrer" href="#" class="flex items-center px-4 -mb-1 border-b-2 border-transparent">Oracle BI</a>
			</li>
			<li class="flex">
				<a rel="noopener noreferrer" href="#" class="flex items-center px-4 -mb-1 border-b-2 border-transparent">1C: Документооборот</a>
			</li>
			<li class="flex">
				<a rel="noopener noreferrer" href="#" class="flex items-center px-4 -mb-1 border-b-2 border-transparent">Тел. справочник</a>
			</li>
		</ul>
		<div class="flex items-center md:space-x-4">
			<div class="relative">
				<span class="absolute inset-y-0 left-0 flex items-center pl-2">
					<button type="submit" title="Search" class="p-1 focus:outline-none focus:ring">
						<svg fill="currentColor" viewBox="0 0 512 512" class="w-4 h-4 text-gray-100">
							<path d="M479.6,399.716l-81.084-81.084-62.368-25.767A175.014,175.014,0,0,0,368,192c0-97.047-78.953-176-176-176S16,94.953,16,192,94.953,368,192,368a175.034,175.034,0,0,0,101.619-32.377l25.7,62.2L400.4,478.911a56,56,0,1,0,79.2-79.195ZM48,192c0-79.4,64.6-144,144-144s144,64.6,144,144S271.4,336,192,336,48,271.4,48,192ZM456.971,456.284a24.028,24.028,0,0,1-33.942,0l-76.572-76.572-23.894-57.835L380.4,345.771l76.573,76.572A24.028,24.028,0,0,1,456.971,456.284Z"></path>
						</svg>
					</button>
				</span>
				<input type="search" name="Search" placeholder="Поиск..." class="w-32 py-2 pl-10 text-sm rounded-md sm:w-auto focus:outline-none bg-main text-main focus:bg-gray-900">
			</div>
			<!-- <button type="button" class="hidden px-6 py-2 font-semibold rounded lg:block bg-violet-400 text-gray-900">Log in</button> -->
		</div>
		<button title="Open menu" type="button" class="p-4 lg:hidden">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6 bg-main">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</div>
</header>