      {
        data.map((item) => (
          <li class="transition-transform bg-white rounded-full group hover:hover-menu-link hover:shadow-lg hover:-translate-y-1">
            <a href={item.url}>
              <div class="p-2">
                <svg class="w-6 h-6 text-gray-600 group-hover:text-main-900">
                  <use xlink:href={"#" + item.icon_one} />
                </svg>
              </div>
              <div class="absolute invisible px-2 text-xs transition-transform bg-main-900 text-white rounded-2xl group-hover:visible group-hover:translate-y-1 whitespace-nowrap">{item.title}</div>
            </a>
          </li>
        ))
      }
    </ul>
    <Search />
    <div class="text-white lg:hidden bg-main rounded-2xl">
      <button data-id="open_drawer_btn" class="flex flex-row place-items-center gap-2 px-3 py-2 rounded-3xl max-w-fit tracking-wide text-base font-400 data-[type=active]:bg-accent-400 data-[type=active]:hover:shadow-active data-[type=simple-invert]:bg-accent-400 data-[type=simple-invert]:hover:shadow-active data-[type=simple]:bg-gray-100 data-[type=simple]:hover:shadow-active data-[type=simple]:hover:bg-accent-400 data-[type=transparent]:text-gray-100 data-[type=transparent]:border-gray-100/20 data-[type=transparent]:hover:shadow-active data-[size=xs]:text-xs data-[size=sm]:text-sm data-[size=sm]:md:text-md data-[size=lg]:text-md data-[size=lg]:md:text-lg data-[interaction=scale]:transition-transform data-[interaction=scale]:scale-75">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-1_5 data-[interaction=scale]:transition-transform data-[interaction=scale]:group-hover:scale-125 data-[size=xs]:w-4 data-[size=xs]:h-4 data-[size=xs]:stroke-1 data-[size=lg]:w-8 data-[size=lg]:h-8 data-[size=header]:w-12 md:data-[size=header]:w-20 data-[size=header]:h-12 md:data-[size=header]:h-20 data-[size=header]:stroke-2 data-[color=teal]:text-accent-400 data-[color=white]:text-white">
          <use href="#ico_menu"></use>
        </svg>
      </button>
    </div>
  </div>
</header>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const
      drawer_btn: HTMLButtonElement = document.querySelector("[data-id=open_drawer_btn]") as HTMLButtonElement,
      main_nav_drawer: HTMLElement = document.getElementById("main_nav_drawer") as HTMLElement;

    try {
      drawer_btn.addEventListener("click", () => {
        main_nav_drawer.classList.toggle("transform-none");
      });
      drawer_btn.addEventListener("keydown", (e) => {
        if (e.code === 'Escape')
          main_nav_drawer.classList.toggle("transform-none");
      });
    } catch (e) {
      console.log("На странице отсутсвует элемент сайдбара\tdata-id=open_drawer_btn");
      console.error(e);
    }
  });
</script>