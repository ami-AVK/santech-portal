---

<Layout title="Короткометражки" icon="#stats-report" full class="ml-32 [&_svg]:text-white">
  <div class="absolute h-40 w-40 -z-50 bg-gradient-to-b from-accent-300 to-accent-400 shadow-active rounded-4xl -top-12 -rotate-12 left-24"></div>
    <div class="absolute h-72 bottom-64 inset-x-0 bg-slate-300 -z-50 bg-gradient-to-b from-gray-300 to-gray-100"></div>

  
  <section class="relative splide overflow-hidden pb-16" role="group" id="news">
    <div class="splide__track py-3">
      <ul class="splide__list">
        {posts.map((post)=>(
          <NewsCard photo="" title={post.title} post={post.post} badge={post.category} date={post.date} />
        ))}
        
      </ul>
    </div>
  </section>
</Layout>
<script>
  document.addEventListener('astro:page-load', () => {
  var splide = new Splide(".splide", {
    type: "slide",
    perPage: 3,
    gap: "2rem",
    paginationKeyboard: true,
    keyboard: "focused",
    focus: "center",
    start: 0,
    easing: "ease",
    waitForTransition: true,
    updateOnMove: true,
    trimSpace: false,
    // padding: "2rem",
    // autoWidth:true,
    breakpoints: {
      768: {
        perPage: 2
      },
  }
  });
  splide.mount();

});
</script>

