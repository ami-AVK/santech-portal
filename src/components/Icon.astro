---
const {id,class: className, ...attributes}=Astro.props;
const data_size=[
    "data-[size=xs]:w-4", "data-[size=xs]:h-4", "data-[size=xs]:stroke-1",
    "data-[size=lg]:w-8", "data-[size=lg]:h-8", 
    "data-[size=header]:w-12", "md:data-[size=header]:w-20", "data-[size=header]:h-12", "md:data-[size=header]:h-20", "data-[size=header]:stroke-2"
];
const data_interaction = [ 
    "data-[interaction=scale]:transition-transform","data-[interaction=scale]:group-hover:scale-125",
];
---
{   /*
    3 типа иконок, управляется добавлением аттрибута data-size
    xs,lg,header
    */
}
<!-- 
>ИКОНКА

АТТРИБУТЫ И ЗНАЧЕНИЯ

data-interaction:
  scale

data-size:
  xs
  lg
  header
  -->
<svg {...attributes} xmlns="http://www.w3.org/2000/svg" 
class:list={["w-6 h-6 md:w-8 md:h-8 stroke-1_5",data_interaction,data_size,className]}>
    <use href=`#${id}`></use>
</svg>