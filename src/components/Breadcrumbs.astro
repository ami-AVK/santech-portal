---
import Icon from "./Icon.astro";
const {level2, class: className} = Astro.props;
---
<nav aria-label="breadcrumb"  class:list={[className]}>
  <ol class="flex flex-wrap items-center px-4 py-2 rounded-md bg-blue-gray-50 bg-opacity-60">
    <li class="flex items-center font-sans text-sm antialiased font-normal leading-normal transition-colors cursor-pointer hover:text-main-900">
      <a class="opacity-60" href={"/"}>
        <Icon data-size="xs" id="home"/>
      </a>
    </li>
    <li class="flex items-center font-sans text-sm antialiased font-normal leading-normal transition-colors cursor-pointer hover:text-main-900">
      <span class="mx-2 font-sans text-sm antialiased font-normal leading-normal pointer-events-none select-none text-blue-gray-500">/</span>
      <a class="font-medium transition-colors hover:text-main-700" href="#">
        {level2}
      </a>
    </li>
  </ol>
</nav>