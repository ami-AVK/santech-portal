---
import Button__vertical from "../components/Button__vertical.astro";
import Icon from "./Icon.astro";
const menuItems=[
    {
        icon:"calendar",
        link:"calendar",
        capture: "9 октября 2023"
    },
    {
        icon:"reports",
        link:"vote",
        capture: "Голосование",
        select:true
    },
    {
        icon:"add-user",
        link:"staff",
        capture: "Новые сотрудники"
    },
    {
        icon:"stats-report",
        link:"news",
        capture: "Короткометражки"
    },
    {
        icon:"birthday-cake",
        link:"birthday",
        capture: "Дни рождения"
    },
    {
        icon:"brain-research",
        link:"job",
        capture: "Вакансии"
    },
    {
        icon:"home-alt",
        link:"story",
        capture: "О компании"
    },
];
---

<div class="invisible lg:visible flex place-content-between">
    {
        menuItems.map((item)=>(
            <a href={`#${item.link}`} data-active={item.select&&'active'} class="
            flex flex-col justify-start items-center gap-1 xl:gap-2 px-3 py-2 xl:px-4 xl:py-3 border-gray-100/20 border rounded-3xl hover:shadow-active text-white
            data-[active=active]:bg-gradient-to-b data-[active=active]:from-accent-300 data-[active=active]:to-accent-400 data-[active=active]:text-gray-900
            ">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 stroke-1_5 " viewBox="0 0 24 24" fill="none">
                    <use href={`#${item.icon}`}></use>
                </svg>
            <div class="text-center  text-xs xl:text-base font-medium leading-none tracking-wide">{item.capture}</div>
            </a>
        ))
    }
    <!-- <div class="text-white text-sm font-400 leading-none tracking-wide">9 октября 2023</div> -->
    

</div>