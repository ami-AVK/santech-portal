        const input:HTMLInputElement = document.getElementById(`main-search_${searchUUID}`) as HTMLInputElement;
        const search_result:HTMLBaseElement = document.getElementById(`suggestions_${searchUUID}`) as HTMLBaseElement;

        if(input){
          // добавил чтобы при клике по ссылке успевал перейти, а то не успевает сработать
          input.addEventListener("focusout", function(){
