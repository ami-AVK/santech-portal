---
const {mail, name, post, photo, status, phone, ext, ...attributes} = Astro.props;
---
<div {...attributes} class="[&_.icon-crown]:data-[status=crown]:block relative text-sm text-gray-900 group whitespace-nowrap" 
    >
        <div class="relative flex items-center gap-1 ">
            <img src="/img/10Years.png" class="absolute hidden w-8 icon-crown -left-8 top" alt=""/>
            <img class="object-cover w-8 h-8 rounded-full" src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80" alt=""/>
            <div class="flex flex-col gap-0">
                <h4 class="text-sm font-medium text-gray-900 px-2 -mb-0.5">{name}</h4>
                <a class="flex px-2 text-xs font-normal tracking-wide text-gray-500 place-self-start " href={"mailto:" + mail}>{mail}</a>
            </div>
        </div>
        <div class="absolute invisible transition duration-300 opacity-0 group-hover:visible group-hover:opacity-100 min-w-max min-h-max left-22 bottom-12">
               <img class="w-64 h-64 rounded-full" src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80" alt=""/>
        </div>
</div>