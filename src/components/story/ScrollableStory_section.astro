<script>
    import Splide from "@splidejs/splide";
    document.addEventListener('astro:page-load', () => {
      const story_sliders = document.querySelectorAll("[data-id]") as NodeListOf<HTMLElement>;
      story_sliders.forEach(slider => {

        var splide = new Splide(`#photoSlider_${slider.dataset.id}`, {
            type: "slide",
            perPage: 2,
            gap: "2rem",
            paginationKeyboard: true,
            keyboard: "focused",
            focus: "center",
            start: 0,
            easing: "ease",
            waitForTransition: true,
            updateOnMove: true,
            autoWidth:true,

        });
        splide.mount();
      })
  });
  </script>
  <style>
    @supports (animation-range: 0vh 40vh) {
